					}
				});

				$('.sushili').on('click', function(){
					if(food > 1) return;
					if( $('.sushi').css('display')=== 'none') {
						food++;
						z++;
						$('.sushi').css('z-index', z).fadeIn();
						total += sushi;
						update(total);
					}
					});

				$('.nachosli').on('click', function(){
					if(food > 1) return;
					if( $('.nachos').css('display')=== 'none') {
						food++;
						z++;
						total += nachos;
						$('.nachos').css('z-index', z).fadeIn();
						update(total);
					}
					});

				$('.burgerli').on('click', function(){
					if(food > 1) return;
					if( $('.burger').css('display')=== 'none') {
						total += burger;
						food ++;
						update(total);
						z++;
						$('.burger').css('z-index', z).fadeIn();
					}
					});


				$('.saladli').on('click', function(){
					if(food > 1) return;
					if( $('.salad').css('display')=== 'none') {
						food ++;
						total += salad;
						update(total);
						z++
						$('.salad').css('z-index', z).fadeIn();
					}
					});

				$('.wineli').on('click', function(){
					if(drinks > 1) return;
					if( $('.wine').css('display')=== 'none') {
						drinks ++;
						total += wine;
						update(total);
						z++;
						$('.wine').css('z-index', z).fadeIn();
					}
					});

				$('.vodkali').on('click', function(){
					if(drinks > 1) return;
					if( $('.vodka').css('display')=== 'none') {
						drinks ++;
						total += vodka;
						update(total);
						z++;
						$('.vodka').css('z-index', z).fadeIn();
					}
					});

				$('.champagneli').on('click', function(){
					if(drinks > 1) return;
					if( $('.salad').css('display')=== 'none') {
						drinks++;
						total += champagne;
						update(total);
						z++;
						$('.champagne').css('z-index', z).fadeIn();
					}
					});

				$('.beerli').on('click', function(){
					if(drinks > 1) return;
					if( $('.beer').css('display')=== 'none') {
						drinks++;
						total += beer;
						update(total);
						z++;
						$('.beer').css('z-index', z).fadeIn();
					}
					});

				$('.tequilali').on('click', function(){
					if(drinks > 1) return;
					if( $('.tequila').css('display')=== 'none') {
						total += tequila;
						drinks++;
						update(total);
						z++;
						$('.tequila').css('z-index', z).fadeIn();
					}
					});

				$('.addOn').on('dblclick',function(){
						var t = $(this);
						if(t.hasClass('kim')){
							total -= kim;
							update(total);
							people--
						}
						if(t.hasClass('queen')){
							total -= queen;
							update(total);
							people--;
						}
						if(t.hasClass('nicki')){
							total -= nicki;
							update(total);
							people--;
						}
						if(t.hasClass('JB')){
							total -= justin;
							update(total);
							people--;
						}
						if(t.hasClass('drake')){
							total -= drake;
							update(total);
							people--;
						}
						if(t.hasClass('RF')){
							total -= rob;
							update(total);
							people--;
						}
						if(t.hasClass('sushi')){
							total -= sushi;
							update(total);
							food--;
						}
						if(t.hasClass('burger')){
							total -= burger;
							update(total);
							food--;
						}
						if(t.hasClass('salad')){
							total -= salad;
							update(total);
							food--;
						}
						if(t.hasClass('nachos')){
							total -= nachos;
							update(total);
							food--;
						}
						if(t.hasClass('champagne')){
							total -= champagne;
							update(total);
							drinks--;
						}
						if(t.hasClass('wine')){
							total -= wine;
							update(total);
							drinks--;
						}
						if(t.hasClass('vodka')){
							total -= vodka;
							update(total);
							drinks--;
						}
						if(t.hasClass('beer')){
							total -= beer;
							update(total);
							drinks--;
						}
						if(t.hasClass('tequila')){
							total -= tequila;
							update(total);
							drinks--;
						}
						$(this).fadeOut();
					});

		});


