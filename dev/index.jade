script.

	$(document).ready(function(){

		$('body').hide().fadeIn(300);

		var total = 4000;

		var update = function(price) {
			price = price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
			$('.total').text('$' + price + '.00');
		}

		var z = 9000;

		var room1 = 4000;
		var room2 = 1800;
		var room3 = 7300;
		var room4 = 300000;
		var room5 = 1200;

		var kim = 200000;
		var rob = 1200000;
		var drake = 3200000;
		var justin = 5000000;
		var nicki = 900000;
		var queen = 21000000;

		var sushi = 175;
		var burger = 25;
		var salad = 35;
		var nachos = 22;

		var champagne = 560;
		var wine = 400;
		var vodka = 630;
		var beer = 30;
		var tequila = 120;

		var drinks = 0;
		var food = 0;
		var people = 0;

		$('.addOn').draggable({ containment: ".main" });

		$('.addOn').on('drag', function(){
				z++;
				$(this).css('z-index', z);
			});

		$('img.sidePic').on('click', function(){

			$('.addOn').hide();
			people = 0;
			drinks = 0;
			food = 0;
			total = 0;

			// get src of image clicked
				var clicked = $(this).attr('src');	

				if (clicked.indexOf("room1") >= 0){
					total += room1;
					}
				else if (clicked.indexOf("room2") >= 0){
					total += room2;
					}
				else if (clicked.indexOf("room3") >= 0){
					total += room3;
					}
				else if (clicked.indexOf("room4") >= 0){
					total += room4;
					}
				else if (clicked.indexOf("room5") >= 0){
					total += room5;
					}

				update(total);


				$('img.small').attr('src', clicked);
			
			// make it display:none
				$('img.small').hide();

			//makes it display:block and adds a transition
				$('img.small').fadeIn('slow');
			});

				$('.main').on('click', 'img', function(){
					var source = $(this).attr('src');

					$('.big').attr('src', source);

					$('.appear').fadeIn('slow');
				});

				$('img.close').on('click', function(){
					$('.appear').fadeOut();
					});


				$('li.alcohol').on('click', function(){
						$('ul.alcohol').slideToggle();
					});

				$('li.food').on('click', function(){
						$('ul.food').slideToggle();
					});

				$('li.women').on('click', function(){
						$('ul.women').slideToggle();
					});

				$('li.men').on('click', function(){
						$('ul.men').slideToggle();
					});

				$('.JBli').on('click', function(){
					if(people > 1) return;
					if( $('.JB').css('display')=== 'none') {
						people++;
						total += justin;
						update(total);
						z++;
						$('.JB').css('z-index', z).fadeIn();
					}
					});

				$('.drakeli').on('click', function(){
					if(people > 1) return;
					if( $('.drake').css('display')=== 'none') {
						people++;
						total += drake;
						update(total);
						z++;
						$('.drake').css('z-index', z).fadeIn();
					}
					});

				$('.RFli').on('click', function(){
					if(people > 1) return;
